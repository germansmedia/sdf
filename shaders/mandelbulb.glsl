void mandelbulb(inout VEC3 v,inout FLOAT dr,VEC3 c,inout FLOAT m) {
    FLOAT r = length(v);
    FLOAT r2 = r * r;
    FLOAT r4 = r2 * r2;
    FLOAT r7 = r * r2 * r4;
    FLOAT r8 = r4 * r4;
    dr = 8.0 * r7 * dr + 1.0;
    FLOAT theta = 8.0 * acos(v.z / r);
    FLOAT phi = 8.0 * atan(v.y,v.x);
    FLOAT sinTheta = sin(theta);
    v = r8 * VEC3(sinTheta * cos(phi),sinTheta * sin(phi),cos(theta)) + c;
    m = 0.5 * log(length(v));
}
